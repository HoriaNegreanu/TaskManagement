@model List<EmployeesViewModel>
@{
    ViewData["Title"] = "Employee Activity";
}
<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model[0].LastName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>
                <a class="btn btn-purple" asp-controller="Employees" asp-action="Details" asp-route-userId="@employee.UserId">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>