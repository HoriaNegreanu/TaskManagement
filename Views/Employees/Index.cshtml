@model List<EmployeesViewModel>
@{
    ViewData["Title"] = "Employee Activity";
}
<h1>Employees</h1>
<form class="mt-3" asp-controller="Employees" asp-action="Index" method="get">
    <p>
        Employee Name: <input class="form-control-inline" type="text" name="SearchName" />
        <input class="btn btn-purple" type="submit" value="Filter" />
    </p>
</form>
<table class="table row-spacing">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model[0].LastName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr class="table-card">
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td class="btn-table-group">
                <a class="btn btn-purple" asp-controller="Employees" asp-action="Details" asp-route-userId="@employee.UserId">View Activity</a>
            </td>
        </tr>
        }
    </tbody>
</table>